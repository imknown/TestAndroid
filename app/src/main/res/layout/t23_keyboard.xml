<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#6FA0"
    android:paddingHorizontal="12dp"
    android:paddingTop="100dp"
    android:paddingBottom="12dp"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/key1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A0D0"
        android:padding="12dp"
        android:text="1"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/key2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="#A0D0"
        android:padding="12dp"
        android:text="2"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/key1"
        app:layout_constraintTop_toTopOf="@+id/key1" />

    <TextView
        android:id="@+id/key3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="#A0D0"
        android:padding="12dp"
        android:text="3"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/key2"
        app:layout_constraintTop_toTopOf="@+id/key1" />

    <TextView
        android:id="@+id/keyDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="#A0D0"
        android:padding="12dp"
        android:text="⌫"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/key3"
        app:layout_constraintTop_toTopOf="@+id/key1" />

    <TextView
        android:id="@+id/keyEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="#A0D0"
        android:padding="12dp"
        android:text="↵"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/keyDelete"
        app:layout_constraintTop_toTopOf="@+id/keyDelete" />
</androidx.constraintlayout.widget.ConstraintLayout>